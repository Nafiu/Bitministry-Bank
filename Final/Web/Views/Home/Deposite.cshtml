@model Entity.Entities.Transactionsdetail

<style>
    .fon {
        font-size: large;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-offset-3" role="form">
            <div class="col-md-8" style="border:double;border-color:darkgray">
                <div class="text-center" style="border-bottom:inset;border-bottom-color:darkgray">
                    <h3 style="font-size:x-large">Deposite your Money</h3>
                </div>
                <div class="form-group" style="margin-top:2%">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-5 col-sm-5 fon" })
                    <h3 style="text-transform:capitalize;">@HttpContext.Current.User.Identity.Name</h3>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @Value = HttpContext.Current.User.Identity.Name, style = "display:none" } })
                    @Html.EditorFor(model => model.Tousername, new { htmlAttributes = new { @Value = HttpContext.Current.User.Identity.Name, style = "display:none" } })
                </div>
                <div class="form-group">
                   <label class="control-label col-md-5 col-sm-5" style="font-size:large">Amount</label>
                    @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @id = "bal", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                </div>
                <div class="form-group text-center">
                    <input type="submit" onclick="return Check();" class="btn btn-success" value="Deposite" />
                </div>
            </div>
        </div>
    </div>
}
